@page
@model carseerTask.Pages.IndexModel

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
    }

    .card-container {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        width: 90%;
        max-width: 500px;
        margin: 30px 0;
        overflow: hidden;
    }

    .card-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-content {
        padding: 20px;
    }

    .card-content h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: bold;
        color: #34495e;
    }

    select {
        width: 100%;
        padding: 8px 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .models-list {
        list-style: none;
        padding-left: 0;
    }

    .models-list li {
        background-color: #f9f9f9;
        margin: 10px 0;
        padding: 10px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .models-list li img {
        width: 70px;
        height: 50px;
        object-fit: cover;
        margin-right: 15px;
        border-radius: 5px;
    }

   
</style>
<br />
<center>
    <div class="card-container">


        <div class="card-content">
            <h2>Find Your Car</h2>

            <form method="get">
                <label for="make">Car Make:</label>
                <select id="make" name="SelectedMakeId" onchange="this.form.submit()">
                    <option value="">-- Select Make --</option>
                    @foreach (var make in Model.Makes)
                {
                    <option value="@make.Make_ID" selected="@(make.Make_ID == Model.SelectedMakeId)">
                        @make.Make_Name
                    </option>
                }
                </select>

                <label for="year">Year:</label>
                <select id="year" name="SelectedYear" onchange="this.form.submit()">
                    <option value="">-- Select Year --</option>
                    @for (int year = DateTime.Now.Year; year >= 1990; year--)
                {
                    <option value="@year" selected="@(year == Model.SelectedYear)">
                        @year
                    </option>
                }
                </select>

                @if (Model.VehicleTypes != null && Model.VehicleTypes.Any())
            {
                <label for="type">Vehicle Type:</label>
                <select id="type" name="SelectedVehicleTypeId" onchange="this.form.submit()">
                    <option value="">-- Select Type --</option>
                    @foreach (var type in Model.VehicleTypes)
                    {
                    <option value="@type.VehicleTypeId" selected="@(type.VehicleTypeId == Model.SelectedVehicleTypeId)">
                        @type.VehicleTypeName
                    </option>
                    }
                </select>
            }
            </form>

            @if (Model.Models != null && Model.Models.Any())
        {
            <h3>Available Models:</h3>
            <ul class="models-list">
                @foreach (var carModel in Model.Models)
                {
                <li>

                    @carModel.Model_Name

                </li>
                }
            </ul>
        }
        </div>
    </div>
</center>
